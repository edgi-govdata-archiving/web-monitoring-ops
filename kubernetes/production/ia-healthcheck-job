apiVersion: batch/v1
kind: CronJob
metadata:
  name: ia-healthcheck-job
  namespace: production
spec:
  schedule: "0 0 * * *"
  jobTemplate:
    spec:
      template:
        spec:
          restartPolicy: Never
          containers:
          - name: ia-healthcheck-job
            image: envirodgi/processing:latest
            command: ["scripts/ia_healthcheck"]
            imagePullPolicy: Always
            resources:
              requests:
                memory: "256Mi"
                cpu: "100m"
              limits:
                memory: "1024Mi"
                cpu: "1500m"
            env:
            - name: SENTRY_DSN
              valueFrom:
                secretKeyRef:
                  name: job-secrets
                  key: healthcheck_sentry_dsn